<% include ../partials/header %>

<main class="row" style="margin: 63px 0 0 0; background: #eee; height: 100%;">
    <div class="col-12 col-sm-4 col-md-3 col-lg-3" style="padding: 0;">
        <% include ../partials/navbar %>
    </div>
    <div class="col-12 col-sm-8 col-md-9 col-lg-9" style="padding: 0.5rem;">
        <div class="row panel-dashboard">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <img src="/images/money.png" alt="">
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Total Revenue</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">2222</h3>
                                </div>
                            </div>
                        </div>
                        <!-- <p class="text-muted mt-3 mb-0">
                                                                <i class="mdi mdi-alert-octagon mr-1" aria-hidden="true"></i> {{'65% lower growth'}}
                                                              </p> -->
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <img src="/images/mobile.png" alt="">
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Orders</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">333333</h3>
                                </div>
                            </div>
                        </div>
                        <!-- <p class="text-muted mt-3 mb-0">
                                                                <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i> {{'Product-wise sales'}}
                                                              </p> -->
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <img src="/images/sale.png" alt="">
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Sales</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">444444</h3>
                                </div>
                            </div>
                        </div>
                        <!-- <p class="text-muted mt-3 mb-0">
                                                                <i class="mdi mdi-calendar mr-1" aria-hidden="true"></i> {{'Weekly Sales'}}
                                                              </p> -->
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <img src="/images/employee.png" alt="">
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Employees</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0"><%= totals[0].total %></h3>
                                </div>
                            </div>
                        </div>
                        <!-- <p class="text-muted mt-3 mb-0">
                                                                <i class="mdi mdi-reload mr-1" aria-hidden="true"></i> {{'Product-wise sales'}}
                                                              </p> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row panel-dashboard">
            <div class="col-lg-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Orders</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Stt
                                        </th>
                                        <th>
                                            Bàn
                                        </th>
                                        <th>
                                            Trạng Thái
                                        </th>
                                        <th>
                                            Số Lượng
                                        </th>
                                        <th>
                                            Tổng Tiền
                                        </th>
                                        <th>
                                            Chi Tiết
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(function(order, i) { %>
                                    <tr>
                                        <td class="font-weight-medium text-center">
                                                <%= i + 1 %>
                                        </td>
                                        <td class="text-center">
                                            <%= order.TenBan %>
                                        </td>
                                        <td class="text-center">
                                            <%if (order.TrangThai == 0) { %>
                                            <label class="badge badge-warning">Not Acive</label>
                                            <% } %>
                                            <%if (order.TrangThai == 1) { %>
                                            <label class="badge badge-success">Completed</label>
                                            <% } %>
                                            <%if (order.TrangThai == 2) { %>
                                            <label class="badge badge-danger">Pending</label>
                                            <% } %>
                                        </td>
                                        <td class="text-center">
                                            <%= order.SoLuong %>
                                        </td>
                                        <td class="text-danger text-center">
                                            <%= order.TongTien %> $
                                        </td>
                                        <td class="text-center">
                                            <button class="btn"><i class="fas fa-user-edit"></i></button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<% include ../partials/footer %>