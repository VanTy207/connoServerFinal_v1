<% include ../partials/header %>
<main class="row" style="margin: 63px 0 0 0; background: #eee; height: 100%;">
    <div class="col-12 col-sm-4 col-md-3 col-lg-3" style="padding: 0;">
        <% include ../partials/navbar %>
    </div>
    <div class="col-12 col-sm-8 col-md-9 col-lg-9" style="padding: 0.5rem;">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-header">Chi Tiết Order</h4>
                    <form class="forms-sample"
                        action="/conno/admin/order/detail/<%= arr[0].idban %>/<%= arr[0].matt %>/<%= arr[0].hoadon %>"
                        method="POST">
                        <p style="margin: 10px 0" class="card-subtitle mb-2 text-muted">
                            <%= arr[0].idban %> - <%= arr[0].hoadon %> - <%= arr[0].tenban %> - <%= arr[0].matt %> - <%= arr[0].ngaytao %>
                        </p>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        Bàn
                                    </th>
                                    <th class="text-center">
                                        Tên Món
                                    </th>
                                    <th class="text-center">
                                        Số Lượng
                                    </th>
                                    <th class="text-center">
                                        Giá
                                    </th>
                                    <th class="text-center">
                                        Tổng Tiền
                                    </th>
                                    <th class="text-center">
                                        Nhân Viên
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% arr.forEach(function(order, i) { %>
                                <tr>
                                    <td class="font-weight-medium text-center">
                                        <%= arr[i].tenban %>
                                    </td>
                                    <td class="font-weight-medium text-center">
                                        <%= arr[i].tenmon %>
                                    </td>
                                    <td class="text-center">
                                        <%= arr[i].soluongmon %>
                                    </td>
                                    <td class="text-center">
                                        <%= arr[i].gia %>
                                    </td>
                                    <td class="text-center">
                                        <%= arr[i].tongtien %>
                                    </td>
                                    <td class="text-danger text-center">
                                        <%= arr[i].tennv %>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        <button type="submit" id="submit" class="btn btn-success">
                            Thanh Toán
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<% include ../partials/footer %>